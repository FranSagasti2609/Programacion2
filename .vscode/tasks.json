{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_c", //La tarea es definida como "build_c"
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "*.c",
                "-o",
                "${fileDirname}\\Proyecto1\\main.exe"
                    ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}